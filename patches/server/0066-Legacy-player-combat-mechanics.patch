+    private void updateAttackSpeedModifier() {
+        AttributeInstance attackSpeed = this.getAttribute(Attributes.ATTACK_SPEED);
+        if (attackSpeed != null) {
+            attackSpeed.removeModifier(LEGACY_ATTACK_SPEED_MODIFIER);
